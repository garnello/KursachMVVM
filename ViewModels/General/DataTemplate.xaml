<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mainWindowView="clr-namespace:KursachWPF.View.MainWindowView"
                    xmlns:vm="clr-namespace:KursachWPF.ViewModels.MainWindow"
                    xmlns:mainWindowVm="clr-namespace:KursachWPF.ViewModels.MainWindowVM"
                    xmlns:accoutnView="clr-namespace:KursachWPF.View.MainWindowView.AccountView"
                    xmlns:avm="clr-namespace:KursachWPF.ViewModels.MainWindowVM.AccountVM"
                    xmlns:mainWindowPages="clr-namespace:KursachWPF.View.MainWindowView.MainWindowPages">
    
    <!--// MainWindow pages //-->
    
    <DataTemplate DataType="{x:Type vm:HomeVM}">
        <mainWindowPages:Home />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:ListVM}">
        <mainWindowView:List />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:SettingVM}">
        <mainWindowView:Setting />
    </DataTemplate>
    
    <!--// AccountView pages //-->
    
    <DataTemplate DataType="{x:Type avm:AvatarVM}">
        <accoutnView:Avatar />
    </DataTemplate>
    
    <DataTemplate DataType="{x:Type avm:EmailVM}">
        <accoutnView:Email />
    </DataTemplate>
    
    <DataTemplate DataType="{x:Type avm:PasswordVM}">
        <accoutnView:Password />
    </DataTemplate>
</ResourceDictionary>